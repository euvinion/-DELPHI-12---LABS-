unit Produtos;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls,
  Vcl.Samples.Spin, Data.DB, Vcl.Grids, Vcl.DBGrids;

type
  TFrmCadProdutos = class(TForm)
    Base: TPanel;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    Label8: TLabel;
    Label9: TLabel;
    Label10: TLabel;
    Label11: TLabel;
    EdtCodProduto: TEdit;
    EdtNomeProduto: TEdit;
    EdtDescProd: TEdit;
    EdtEstoqueAtual: TEdit;
    EdtUnMedida: TEdit;
    EdtFornecedor: TEdit;
    EdtCodBarras: TEdit;
    BtnSalvar: TButton;
    BtnEditar: TButton;
    BtnLimpar: TButton;
    BtnExcluir: TButton;
    CbCadCategoria: TComboBox;
    EdtPrecoCusto: TEdit;
    EdtPrecoVenda: TEdit;
    procedure BtnSalvarClick(Sender: TObject);
    procedure EdtPrecoVendaKeyPress(Sender: TObject; var Key: Char);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FrmCadProdutos: TFrmCadProdutos;

implementation

{$R *.dfm}

uses Login, Sistema;

procedure TFrmCadProdutos.BtnSalvarClick(Sender: TObject);
var
  i: Integer;
begin

  for i := 0 to Self.ComponentCount - 1 do
  begin
    if Self.Components[i] is TEdit then
    begin
      if Trim(TEdit(Self.Components[i]).Text) = '' then
      begin
        ShowMessage('Preencha o campo:' + TEdit(Self.Components[i]).Name);
        TEdit(Self.Components[i]).SetFocus;
        Exit;
      end;
    end;
  end;

  ShowMessage('Todos os campos foram preenchidos, pode salvar!.');

  for i := 0 to Self.ComponentCount - 1 do
  begin
    if Self.Components[i] is TEdit then
    begin
      TEdit(Self.Components[i]).Clear;
      //CbCadCategoria.Clear;
      EdtPrecoVenda.Clear;
      EdtPrecoCusto.Clear;
    end;
  end;

end;

procedure TFrmCadProdutos.EdtPrecoVendaKeyPress(Sender: TObject; var Key: Char);
begin
var
  valor: Currency;
begin
  // permite só números e backspace
  if not (Key in ['0'..'9', #8]) then
    Key := #0;

  // pega o valor atual (sem formatação)
  if EdtPrecoVenda.Text = '' then
    valor := 0
  else
    valor := StrToCurrDef(StringReplace(EdtPrecoVenda.Text, 'R$ ', '', [rfReplaceAll]), 0);

  // adiciona o novo dígito
  if Key in ['0'..'9'] then
    valor := valor * 10 + (Ord(Key) - Ord('0'))
  else if Key = #8 then
    valor := valor div 10;

  // mostra formatado
  EdtPrecoVenda.Text := FormatCurr('"R$ "##,##0.00', valor / 100);
  EdtPrecoVenda.SelStart := Length(EdtPrecoVenda.Text); // mantém cursor no fim
  Key := #0;
end;

end.
